<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dev.to Blog Viewer</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <!-- üåê Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">üíª Dev.to Blog Viewer</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

  <!-- üí° Hero Section -->
  <header class="bg-light py-5 text-center border-bottom">
    <div class="container">
      <h1 class="display-5 text-primary fw-bold">üì∞ Latest Tech News from Dev.to</h1>
      <p class="lead text-muted">Fresh from the Dev.to community ‚Äî tech, code, startups, and more</p>
    </div>
  </header>

  <!-- üìÉ Main Content -->
  <main class="container my-5">
    <% if (articles.length > 0) { %>
      <div class="row">
        <% articles.forEach(article => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= article.title %></h5>
                <p class="card-text text-muted mb-2">by <%= article.user.name %></p>
                <a href="<%= article.url %>" target="_blank" class="btn btn-outline-primary mt-auto">Read More</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center">No articles found or an error occurred fetching data.</div>
    <% } %>
  </main>

  <!-- ü¶∂ Footer -->
  <footer class="bg-primary text-white py-4 mt-5">
    <div class="container text-center">
      <p class="mb-0">&copy; <%= new Date().getFullYear() %> Dev.to Blog Viewer</p>
      <small>Built with ‚ù§Ô∏è using Node.js, Express, Axios, and the Dev.to API</small>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
